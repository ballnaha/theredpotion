{
  "name": "theredpotion-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "dev:customer": "turbo run dev --filter=@theredpotion/customer",
    "dev:admin": "turbo run dev --filter=@theredpotion/admin",
    "dev:restaurant": "turbo run dev --filter=@theredpotion/restaurant",
    "dev:rider": "turbo run dev --filter=@theredpotion/rider"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "turbo": "^2.5.4",
    "typescript": "^5"
  },
  "packageManager": "npm@10.0.0"
}
